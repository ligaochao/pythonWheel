#在这边写新的方法
def  xmlSpecialCharacterConversion(obj):
	obj = obj.replace("<","&lt;")
	obj = obj.replace(">","&gt;")
	obj = obj.replace("&","&amp;")
	obj = obj.replace('"',"&quot;")
	obj = obj.replace("'","&apos;")
	return obj


#在这里添加自定义的过滤器

def  addfliter(env):
	env.filters['tohump'] = tohump
	env.filters['toJavaType'] = toJavaType
	env.filters['arrayWeightRemoval'] = arrayWeightRemoval
	return  env

